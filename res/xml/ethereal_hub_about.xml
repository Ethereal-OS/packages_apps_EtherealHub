<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Ethereal Changelog -->
    <Preference
        android:key="ethereal_changelog"
        android:icon="@drawable/ic_changelog"
        android:title="@string/changelog_ethereal_title"
        android:summary="@string/changelog_ethereal_summary">
        <intent android:action="android.intent.action.MAIN"
             android:targetPackage="com.android.settings"
             android:targetClass="com.ethereal.hub.fragments.about.ChangelogActivity"/>
    </Preference>

    <!-- Ethereal Website -->
    <Preference
        android:key="ethereal_website"
        android:icon="@drawable/ic_web"
        android:title="@string/ethereal_website_title"
        android:summary="@string/ethereal_website_summary" />

    <!-- Ethereal Translate -->
    <Preference
        android:key="ethereal_translate"
        android:icon="@drawable/ic_translate"
        android:title="@string/ethereal_translate_title"
        android:summary="@string/ethereal_translate_summary" />

    <!-- Ethereal Share -->
    <Preference
        android:key="ethereal_share"
        android:icon="@drawable/ic_share"
        android:title="@string/share_ethereal_title"
        android:summary="@string/share_ethereal_summary" />

    <!-- Ethereal Donate -->
    <Preference
        android:key="ethereal_donate"
        android:icon="@drawable/ic_donate"
        android:title="@string/donate_ethereal_title"
        android:summary="@string/donate_ethereal_summary" />

    <!-- Ethereal Source -->
    <Preference
        android:key="ethereal_source"
        android:icon="@drawable/ic_source"
        android:title="@string/ethereal_source_title"
        android:summary="@string/ethereal_source_summary" />

    <!-- Ethereal Telegram -->
    <Preference
        android:key="ethereal_telegram"
        android:icon="@drawable/ic_telegram"
        android:title="@string/ethereal_telegram_title"
        android:summary="@string/ethereal_telegram_summary" />

    <!-- Ethereal Telegram Updates Channel -->
    <Preference
        android:key="ethereal_telegram_channel"
        android:icon="@drawable/ic_telegram_channel"
        android:title="@string/ethereal_telegram_channel_title"
        android:summary="@string/ethereal_telegram_channel_summary" />

    <!-- Ethereal buildserver sponsor -->
    <Preference
        android:key="ethereal_buildserversponsor"
        android:icon="@drawable/ic_sponsor"
        android:title="@string/ethereal_buildserversponsor_title"
        android:summary="@string/ethereal_buildserversponsor_summary" />

    <!-- Ethereal sponsor -->
    <Preference
        android:key="ethereal_sponsor"
        android:icon="@drawable/ic_sponsor"
        android:title="@string/ethereal_sponsor_title"
        android:summary="@string/ethereal_sponsor_summary" />

    <!-- Ethereal OTA update -->
    <Preference
        android:key="system_update_settings"
        android:title="@string/ethereal_update_title"
        android:summary="@string/ethereal_update_summary"
        android:icon="@drawable/ic_update"
        settings:controller="com.android.settings.system.SystemUpdatePreferenceController">
        <intent android:action="android.settings.SYSTEM_UPDATE_SETTINGS" />
    </Preference>
</PreferenceScreen>
